root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,py}]
indent_style = space

[*.py]
indent_size = 4

[*.js]
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
